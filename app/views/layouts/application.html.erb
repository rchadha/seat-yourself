<!DOCTYPE html>
<html>
<head>
  <title>Seat-Yourself</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>


<body>
<nav class="navbar navbar-default">
	<div class="container-fluid">
		<div class="navbar-brand">Seat Yourself</div>
		<ul class="nav navbar-nav pull-right">
			<% if user_signed_in? %>
				Signed in as <b><%= current_user.email %></b> <%= current_user.is_admin ? "(admin)" : "(user)" %>
				<%= link_to "Sign Out", destroy_user_session_path, :method => :delete %>
			<% else %>
				<%= link_to "Sign Up", new_user_registration_path %> or <%= link_to "Sing In", new_user_session_path %>
			<% end %>

			<% flash.each do |name, msg| %>
				<%= content_tag :div, msg, :id => "flash_#{name}" %>
			<% end %>

		</ul>
		
	</div>
</nav>

<div class="container">
	
	<%= yield %>
</div>


</body>
</html>
